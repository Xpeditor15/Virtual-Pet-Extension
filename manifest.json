{
    "manifest_version": 3,
    "name": "Pixel Pet Extension",
    "version": "1.0",
    "description": "Adds a pixel pet onto your website!",
    "content_scripts": [
        {
            "js": ["scripts/content_first/content.js", "scripts/content_first/interrupts.js", "scripts/content_first/check_functions.js", "scripts/content_first/image.js", "scripts/content_first/movement.js"],
            "css": ["popup/petstyle.css"],
            "matches": ["<all_urls>"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["images/*", "popup/petstyle.css"],
            "matches": ["<all_urls>"]
        }
    ]
}